{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Coravel": {
    "Queue": {
      "ConsummationDelay": 1
    }
  },
  "JwtSettings": {
    // Token 的有效時間（以秒為單位），這裡設為 86400 秒（24 小時）
    "TokenTimeout": 86400,
    // JWT 的發行者（Issuer），表示生成和簽署該 Token 的實體或服務
    "Issuer": "Issuer",
    // JWT 的受眾（Audience），表示該 Token 被設計用來的接收者或消費者
    "Audience": "Audience",
    // 用於簽署 JWT 的密鑰（SignKey），必須保密且長度足夠，以確保 Token 的安全性
    "SignKey": "1SS23ssaROikK3@uK&&OEb#FW1vd3QFFAA"
  }
}